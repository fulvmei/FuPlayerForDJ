<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@id/controller_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/controller_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fpu_bg_video_controller_top"
                android:gravity="center_vertical"
                android:paddingBottom="20dp">

                <ImageButton
                    android:id="@+id/controller_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:paddingLeft="16dp"
                    android:paddingTop="12dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="12dp"
                    android:src="@drawable/fpu_selector_back_port" />

                <TextView
                    android:id="@+id/controller_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:textColor="#ffffff"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageButton
                android:id="@id/controller_play_pause_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@null"
                android:padding="12dp"
                android:src="@drawable/fpu_selector_play_port" />

            <ImageButton
                android:id="@id/controller_volume_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:padding="14dp"
                android:src="@drawable/fpu_ic_control_volume_on_port" />

            <LinearLayout
                android:id="@+id/controller_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/fpu_bg_video_controller_bottom"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <TextView
                    android:id="@id/controller_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingLeft="8dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry"
                    tools:text="00:00" />

                <SeekBar
                    android:id="@id/controller_seek"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxHeight="2dp"
                    android:minHeight="2dp"
                    android:paddingLeft="4dp"
                    android:paddingTop="8dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="8dp"
                    android:progressDrawable="@drawable/fpu_bg_controller_progress"
                    android:thumb="@drawable/fpu_ic_controller_thumb" />

                <TextView
                    android:id="@id/controller_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:paddingEnd="8dp"
                    android:paddingRight="8dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    tools:ignore="RtlSymmetry" />

                <ImageView
                    android:id="@+id/controller_screen_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="6dp"
                    android:padding="8dp"
                    android:src="@drawable/fpu_ic_full_screen" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/controller_slide_brightness"
            android:layout_width="155dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/fpu_bg_controller_slide"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/fpu_ic_control_slide_brightness" />

            <TextView
                android:id="@+id/controller_slide_brightness_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/controller_slide_brightness_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:progressDrawable="@drawable/fpu_bg_controller_progress" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_slide_forward"
            android:layout_width="155dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/fpu_bg_controller_slide"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/controller_slide_forward_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/fpu_ic_control_slide_forward" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/controller_slide_forward_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/fpu_color_progress_progress"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:text="/"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/controller_slide_forward_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>


            <ProgressBar
                android:id="@+id/controller_slide_forward_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:progressDrawable="@drawable/fpu_bg_controller_progress" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/controller_slide_volume"
            android:layout_width="155dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/fpu_bg_controller_slide"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:src="@drawable/fpu_ic_control_slide_volume_on" />

            <TextView
                android:id="@+id/controller_slide_volume_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ProgressBar
                android:id="@+id/controller_slide_volume_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="24dp"
                android:progressDrawable="@drawable/fpu_bg_controller_progress" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/controller_bottom_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentBottom="true"
            android:progressDrawable="@drawable/fpu_bg_controller_progress" />
    </RelativeLayout>
</merge>